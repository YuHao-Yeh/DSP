{
   "editor.tabSize": 3,
   "editor.fontSize": 15,
   "editor.accessibilityPageSize": 12,
   "editor.useTabStops": false,
   "editor.formatOnPaste": false,
   "editor.suggestSelection": "recentlyUsedByPrefix",
   "editor.detectIndentation": false,
   "editor.guides.indentation": true,
   
   "diffEditor.ignoreTrimWhitespace": false,
   
   "security.workspace.trust.untrustedFiles": "open",

   "[cpp]": {
      "editor.formatOnType": true,
      "editor.formatOnSave": true,
      "editor.insertSpaces": true,
      "editor.detectIndentation": true,
      "editor.tabSize": 3
   },
   "[c]":{
      "editor.formatOnType": true,
      "editor.formatOnSave": true,
      "editor.insertSpaces": true,
      "editor.detectIndentation": true,
      "editor.tabSize": 3
   },
   "clang.executable" : "C:\\Program Files\\LLVM\\bin\\clang.exe",
   // C++
   "clang.cxxflags": [
      "-std=c++17",
      "-IC:\\MinGW\\include",
      "-IC:\\MinGW\\lib\\gcc\\mingw32\\9.2.0\\include",
      "-IC:\\MinGW\\lib\\gcc\\mingw32\\9.2.0\\include\\c++",
      "-I${workspaceRoot}\\include",
      "-I${cwd}"
   ],
   // C
   "clang.cflags":[
      "-std=c11",
      "-IC:\\MinGW\\include",
      "-IC:\\MinGW\\lib\\gcc\\mingw32\\9.2.0\\include",
      "-I${workspaceRoot}\\include",
      "-I${cwd}"
   ],
   
   "files.associations": {
      // C++
      "iostream": "cpp",
      "array": "cpp",
      "atomic": "cpp",
      "bit": "cpp",
      "*.tcc": "cpp",
      "cctype": "cpp",
      "clocale": "cpp",
      "cmath": "cpp",
      "cstdarg": "cpp",
      "cstddef": "cpp",
      "cstdint": "cpp",
      "cstdio": "cpp",
      "cstdlib": "cpp",
      "cstring": "cpp",
      "cwchar": "cpp",
      "cwctype": "cpp",
      "deque": "cpp",
      "unordered_map": "cpp",
      "vector": "cpp",
      "exception": "cpp",
      "algorithm": "cpp",
      "functional": "cpp",
      "iterator": "cpp",
      "memory": "cpp",
      "memory_resource": "cpp",
      "numeric": "cpp",
      "optional": "cpp",
      "random": "cpp",
      "string": "cpp",
      "string_view": "cpp",
      "system_error": "cpp",
      "tuple": "cpp",
      "type_traits": "cpp",
      "utility": "cpp",
      "fstream": "cpp",
      "initializer_list": "cpp",
      "iosfwd": "cpp",
      "istream": "cpp",
      "limits": "cpp",
      "new": "cpp",
      "ostream": "cpp",
      "sstream": "cpp",
      "stdexcept": "cpp",
      "streambuf": "cpp",
      "typeinfo": "cpp",
      // C
      "stdio.h": "c",
   },
   "files.autoGuessEncoding": true,

   "code-runner.runInTerminal": true,
   "code-runner.executorMap":{
      "c": "cd $dir && gcc $fileName -o $fileNameWithoutExt -std=c11 && $dir$fileNameWithoutExt",
      "cpp": "cd $dir && g++ $fileName -o $fileNameWithoutExt -std=c++17 && $dir$fileNameWithoutExt",
   },
      
   "C_Cpp.codeFolding": "Enabled",
   "C_Cpp.autocompleteAddParentheses": true,
   // "C_Cpp.updateChannel": "Insiders",
   "C_Cpp.vcFormat.indent.accessSpecifiers": true,
   "C_Cpp.vcFormat.indent.braces": true,
   "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
   "C_Cpp.vcFormat.indent.caseLabels": true,
   "C_Cpp.vcFormat.indent.multiLineRelativeTo": "innermostParenthesis",
   "C_Cpp.vcFormat.indent.namespaceContents": true,
   "C_Cpp.vcFormat.indent.preprocessor": "oneLeft",
   "C_Cpp.vcFormat.indent.preserveWithinParentheses": true,
   "C_Cpp.vcFormat.indent.withinParentheses": "alignToParenthesis",
   "C_Cpp.vcFormat.newLine.beforeElse": true,
   "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
   "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "newLine",
   "C_Cpp.vcFormat.space.removeBeforeSemicolon": true,
}